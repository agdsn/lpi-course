% Plots a keyboard button with the selected key
\newcommand*\taste[1]{%
  \tikz[baseline=(key.base)]
    \node[%
      draw,
      fill=white,
      drop shadow={shadow xshift=0.25ex,shadow yshift=-0.25ex,fill=black,opacity=0.75},
      rectangle,
      rounded corners=2pt,
      inner sep=1pt,
      line width=0.5pt,
      minimum height=0.4cm,
      minimum width=0.5cm,
      font=\scriptsize\sffamily
    ](key) {\;#1\strut\;}
  ;
}

